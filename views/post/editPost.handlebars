<h2 class="center">
  <i class="fa fa-spinner" style="display: none" id="spinner"></i>
</h2>

<form id="editForm" action="/editPost/{{post._id}}" method="POST">

  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" name="title" value="{{post.title}}" class="form-control">
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    <textarea type="text" name="body" class="form-control">{{post.body}}</textarea>
  </div>
  <div class="form-group">
    <label for="status">Status</label>
    <select name="status" class="form-control">
      <option value="public">Public</option>
      <option value="private">Private</option>
      <option value="friends">Friends</option>
    </select>
  </div>
  <div class="form-group">
    <input type="file" name="image" id="upload-input">
  </div>
  <div class="form-group form-check">
    <input type="checkbox" name="allowComments" id="checkbox" class="form-check-input">
    <label for="checkbox">Allow Comments</label>

  </div>
  <div class="form-group">
    <button type="button" onclick="savePost()" class="btn btn-primary">Save</button>
  </div>
</form>

<script>
  var spinner = document.getElementById('spinner');
  var form = document.getElementById('editForm');

  function savePost(){
    spinner.style.display = "block";
    form.style.display = "none";

    setTimeout(function(){
      form.submit();
    }, 2000);
  }
</script>
