<div class="row">
  <div class="col-sm-4">
    <form action="/signup" method="POST">
    {{#each errors}}
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>{{text}}
    </div>
    {{/each}}
      <div class="form-group">
        <label for="username">Fullname</label>
        <input type="text" name="username" id="username" value="{{fullname}}" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input type="text" name="email" id="email" value="{{email}}"  class="form-control" required>
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" value="{{password}}" id="password" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="password2">Confirm Password</label>
        <input type="password" name="password2" id="password2" value="{{password}}" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

  </div>
</div>
